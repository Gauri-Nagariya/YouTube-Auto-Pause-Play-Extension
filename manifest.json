{
    "manifest_version": 3,
    "name": "YouTube Auto Pause/Play",
    "version": "1.0",
    "description": "Automatically pauses YouTube videos when tab is unfocused and resumes when refocused.",
    "permissions": ["scripting", "tabs"],
    "host_permissions": ["https://www.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_title": "YouTube Auto Pause",
      "default_icon": "icon32.png"
    }
  }
  